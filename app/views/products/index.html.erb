<table style="widtd:100%">
  <%= link_to('Create', new_product_path) %>
  <tr>
   <td>Title</td>
   <td>Price</td>
   <td>Category</td>
 </tr>
 <% @products.each do |product| %>
 <tr>
   <td><%= product.title %></td>
   <td><%= product.price %></td>
   <td><%= product.category.try(:title) %></td>
   <td><%= link_to 'Read info', product_path(product) %>
   <td><%= link_to 'Edit', edit_product_path(product) %>
 </tr>
<% end %>
